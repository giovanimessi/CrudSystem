@model IEnumerable<CrudSystem.Models.Cargo>
@{
    ViewData["Title"] = "Lista de Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">

    <div class="display-2 text-center">@ViewData["Title"]</div>


</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-success" asp-action="Create" asp-controller="Cargo">Criar Cargo</a>

        </div>
        <div class="row">
            <div class="col-md-12">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="text-center">
                                <th>@Html.DisplayNameFor(m => m.CODIGO)</th>
                                <th>@Html.DisplayNameFor(m => m.Nome_Cargo)</th>
                                <th>@Html.DisplayNameFor(m => m.CODIGO)</th>
                                <th>Ações</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="text-center">
                                <td>@item.CODIGO</td>
                                <td>@item.Nome_Cargo</td>
                                <td>@item.CODIGO</td>
                                <td>
                                    <a asp-controller="Departamento" asp-action="Edit" asp-route-id="@item.CODIGO" class="btn btn-warning">EDITAR</a>

                                    <a asp-controller="Departamento" asp-action="Delete" asp-route-id="@item.CODIGO" class="btn btn-danger">DELETAR</a>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <p>Nao existe</p>
                }

            </div>
        </div>

    </div>

</div>